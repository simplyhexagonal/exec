{
  "name": "@simplyhexagonal/exec",
  "version": "1.0.3",
  "description": "A convenient async wrapper for Node.js's child_process.exec function",
  "keywords": [
    "exec",
    "child_process",
    "async exec",
    "exec promise",
    "promise",
    "awaitable exec",
    "promisify",
    "exit code"
  ],
  "contributors": [
    {
      "name": "Jean M. Lescure",
      "email": "opensource@jeanlescure.io",
      "url": "http://jeanlescure.io/"
    }
  ],
  "main": "dist/exec.js",
  "typings": "dist/exec.d.ts",
  "scripts": {
    "dev": "./scripts/dev",
    "test": "./scripts/test",
    "build": "./scripts/build",
    "release": "release-it"
  },
  "release-it": {
